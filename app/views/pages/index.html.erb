<script>
  var snippet_array = <%= raw @snippets.to_json %>
</script>
<div class="overlay">
  <div class="overlaycontainer">
    <div class="overlaybox">
    </div>

  </div>
</div>
<main>
  <div class="click_me_container">

    <div class="click-me"></div>
    <div id="carousel">
      <% @articles.each do |a| %>
      <div class="hideRight article" data-category="<%= a.newsapi_category %>" id="<%= "article-id-#{a.id}" %>">
        <p class="headline"><%= "#{a.newsapi_title}" %></p>
        <div class="card-image" style="background-image: url(<%= image_path("#{a.newsapi_imgeurl}") %>);"></div>
      </div>
      <% end %>
    </div>
  </div>

  <div class="footer fixed-bottom footer-links">
  <button type="button" class="btn btn-secondary btn-sm" data-category="general"><i class="fas fa-home"></i></i></button>
  <button type="button" class="btn btn-secondary btn-sm" data-category="business"><i class="fas fa-briefcase"></i></button>
  <button type="button" class="btn btn-secondary btn-sm" data-category="science"><i class="fas fa-flask"></i></button>
  <button type="button" class="btn btn-secondary btn-sm" data-category="technology"><i class="fas fa-mobile-alt"></i></button>
  <button type="button" class="btn btn-secondary btn-sm" data-category="entertainment"><i class="fas fa-film"></i></button>
  <button type="button" class="btn btn-secondary btn-sm" data-category="health"><i class="fas fa-heartbeat"></i></i></button>
  <button type="button" class="btn btn-secondary btn-sm" data-category="sports"><i class="fas fa-futbol"></i></button>
</div>





</main>
<script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>

