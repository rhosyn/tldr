<div class="fixed-top">
  <button type="button" class="btn pulse" id="happy-deactivated"></i></button>
  <a href="/" class="homepage-link"><h1>tldr</h1></a>
  <a href="/my_articles" class="history_link"><i class="far fa-lightbulb"></i></a>
  <a href="/history" class="history_link"><i class="fas fa-history"></i></a>
</div>

<div class="history_overlay">
  <div class="history_overlaycontainer">
    <div class="history_overlaybox">
    </div>

  </div>
</div>

<div class="history_container">
  <div class="history_card top">
    <div class="history_elements top">
      <!-- <div class="history_header top"></div> -->
      <div class="history_article top">
        <i class="fas fa-history"></i><h1>History</h1>
        <p class="history-header-para">A list of all the articles you've ever opened</p>
      </div>
    </div>
  </div>
  <% @history.each do |date,article_array| %>
  <div class="history_card">
    <div class="history_header"><p><%= date %></p>
    </div>
    <div class="history_elements">
      <% article_array.each do  |a| %>
      <div class="history_article" id = "hist-<%= a.id %>"data-id="<%= a.id %>" data-img_url="<%= a.img_url %>" data-sentences= "<%= a.summary_sentences %>" data-title= "<%= a.title %>">
        <!-- TODO: Add in links back to cards -->
        <div class="history-image-div">
          <div class="history_article_img" style="background-image: url( <%= a.img_url %> );"></div>
        </div>
        <p><%= a.title %></p>
      </div>
      <% end %>
    </div>
  </div>
  <% end %>
</div>


<script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>

