<main>
  <div id="carousel">

    <div class="selected">
      <p class="headline"><%= "#{Article.find(4).newsapi_title}" %></p>
      <div class="card-image" style="background-image: url(<%= image_path("#{Article.find(4).newsapi_imgeurl}") %>);">
      </div>

    </div>

    <div class="next">
      <p class="headline"><%= "#{Article.find(5).newsapi_title}" %></p>
      <div class="card-image" style="background-image: url(<%= image_path("#{Article.find(5).newsapi_imgeurl}") %>);">
      </div>

    </div>

    <div class="nextRightSecond">
      <p class="headline"><%= "#{Article.find(6).newsapi_title}" %></p>
      <div class="card-image" style="background-image: url(<%= image_path("#{Article.find(6).newsapi_imgeurl}") %>);">
      </div>

    </div>

    <% @articles.each do |a| %>
      <div class="hideRight">
        <p class="headline"><%= "#{a.newsapi_title}" %></p>
        <div class="card-image" style="background-image: url(<%= image_path("#{a.newsapi_imgeurl}") %>);">
        </div>
      </div>
    <% end %>

  </div>

</main>
